{
  "name": "fading-suns",
  "version": "2.0.0",
  "description": "FadingSuns system",
  "scripts": {
    "build": "sass src/scss/fading-suns.scss css/fading-suns.css --style=expanded --no-source-map",
    "watch": "sass src/scss/fading-suns.scss css/fading-suns.css --style=expanded --source-map --watch",
